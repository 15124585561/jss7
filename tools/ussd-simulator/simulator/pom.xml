<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>ss7-parent</artifactId>
		<groupId>org.mobicents.protocols.ss7</groupId>
		<version>1.0.0.BETA2-SNAPSHOT</version>
	</parent>

	<groupId>org.mobicents.protocols.ss7.tools</groupId>
	<artifactId>ss7-ussd-simulator</artifactId>
	<packaging>jar</packaging>

	<name>Mobicents USSD Simulator</name>

	<dependencies>
		<!-- Managed deps -->
		<!-- SS7 -->
		<dependency>
			<groupId>org.mobicents.protocols.ss7.map</groupId>
			<artifactId>map-api</artifactId>
			<version>${map.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.map</groupId>
			<artifactId>map-impl</artifactId>
			<version>${map.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.sccp</groupId>
			<artifactId>sccp-api</artifactId>
			<version>${sccp.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.sccp</groupId>
			<artifactId>sccp-impl</artifactId>
			<version>${sccp.version}</version>
		</dependency>

		<dependency>
			<groupId>org.mobicents.protocols.asn</groupId>
			<artifactId>asn</artifactId>
			<version>${asn.version}</version>
		</dependency>

		<dependency>
			<groupId>org.mobicents.protocols.ss7.tcap</groupId>
			<artifactId>tcap-impl</artifactId>
			<version>${tcap.version}</version>
		</dependency>

		<dependency>
			<groupId>org.mobicents.protocols.ss7.tcap</groupId>
			<artifactId>tcap-api</artifactId>
			<version>${tcap.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.mtp</groupId>
			<artifactId>MTP</artifactId>
			<version>${mtp.version}</version>
		</dependency>

		<dependency>
			<groupId>concurrent</groupId>
			<artifactId>concurrent</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>provided</scope>
		</dependency>

		<!-- Not managed deps -->

		<dependency>
			<groupId>org.mobicents.external.appframework</groupId>
			<artifactId>appframework</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.external.appframework</groupId>
			<artifactId>swing-layout</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.external.appframework</groupId>
			<artifactId>swing-worker</artifactId>
			<version>1.1</version>
		</dependency>

		<dependency>
			<groupId>org.mobicents.external.opencsv</groupId>
			<artifactId>opencsv</artifactId>
			<version>1.8</version>
		</dependency>
		<!--
			<dependency> <groupId>urbanophile</groupId>
			<artifactId>java-getopt</artifactId> </dependency>
		-->
	</dependencies>


	<build>
		<finalName>${pom.artifactId}</finalName>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependency-jar</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.map</groupId>
									<artifactId>map-api</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										map-api.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.map</groupId>
									<artifactId>map-impl</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										map-impl.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.sccp</groupId>
									<artifactId>sccp-api</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										sccp-api.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.sccp</groupId>
									<artifactId>sccp-impl</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										sccp-impl.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.asn</groupId>
									<artifactId>asn</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										asn.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.tcap</groupId>
									<artifactId>tcap-api</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										tcap-api.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.tcap</groupId>
									<artifactId>tcap-impl</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										tcap-impl.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.mtp</groupId>
									<artifactId>MTP</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										mtp.jar
									</destFileName>
								</artifactItem>
								
								<artifactItem>
									<groupId>concurrent</groupId>
									<artifactId>concurrent</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										concurrent.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>log4j</groupId>
									<artifactId>log4j</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										log4j.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.external.appframework</groupId>
									<artifactId>appframework</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										appframework.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.external.appframework</groupId>
									<artifactId>swing-layout</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										swing-layout.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.external.appframework</groupId>
									<artifactId>swing-worker</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										swing-worker.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.mobicents.external.opencsv</groupId>
									<artifactId>opencsv</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${project.build.directory}
									</outputDirectory>
									<destFileName>
										opencsv.jar
									</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
