		<dependency>
			<groupId>org.mobicents.external.opencsv</groupId>
			<artifactId>opencsv</artifactId>
		</dependency>

		<dependency>
			<groupId>javolution</groupId>
			<artifactId>javolution</artifactId>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<finalName>${pom.artifactId}</finalName>
				<plugins>
					<plugin>
						<artifactId>maven-eclipse-plugin</artifactId>
						<groupId>org.mobicents.tools</groupId>
						<version>
					${mobicents.tools.mavenplugin.eclipse.version}
						</version>
						<inherited>false</inherited>
						<configuration>
							<classpathExcludes>
								<exclude>xml-apis:xml-apis</exclude>
								<exclude>jtidy:jtidy</exclude>
							</classpathExcludes>
							<resolveTransitiveDependencies>
						true
					</resolveTransitiveDependencies>
							<eclipseProjectName>
						mobicents-ss7-simulator
					</eclipseProjectName>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-compiler-plugin</artifactId>
						<configuration>
							<source>1.5</source>
							<target>1.5</target>
						</configuration>
					</plugin>

				</plugins>
			</build>

		</profile>
		<profile>
			<id>assemble</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<finalName>${pom.artifactId}</finalName>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-dependency-jar</id>
								<phase>process-resources</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<!-- this artifact :) -->
										<artifactItem>
											<groupId>${pom.groupId}</groupId>
											<artifactId>${pom.artifactId}</artifactId>
											<version>${pom.version}</version>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										ussd-simulator.jar
									</destFileName>
										</artifactItem>

										<!-- deps -->
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.map</groupId>
											<artifactId>map-api</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										map-api.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.map</groupId>
											<artifactId>map-impl</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										map-impl.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.sccp</groupId>
											<artifactId>sccp-api</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										sccp-api.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.sccp</groupId>
											<artifactId>sccp-impl</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										sccp-impl.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.m3ua</groupId>
											<artifactId>m3ua-api</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										m3ua-api.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.m3ua</groupId>
											<artifactId>m3ua-impl</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										m3ua-impl.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.asn</groupId>
											<artifactId>asn</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										asn.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.tcap</groupId>
											<artifactId>tcap-api</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										tcap-api.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.tcap</groupId>
											<artifactId>tcap-impl</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										tcap-impl.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.ss7.mtp</groupId>
											<artifactId>mtp-api</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										mtp-api.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>org.mobicents.protocols.stream</groupId>
											<artifactId>stream</artifactId>
											<type>jar</type>
											<overWrite>true</overWrite>
											<outputDirectory>
										${assemble.dir}/lib
									</outputDirectory>
											<destFileName>
										stream.jar
									</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>javolution</groupId>
